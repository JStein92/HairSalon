@{
  Layout = "_Layout";
}
<div class="container">
  <h1>Add a new Client for @Model.GetName()</h1>

  <form class="form-group" action="/StylistDetails/@Model.GetId()" method="post">
    <label for="name">Client Name</label>
    <input type="text" name="name" class="form-control">

    <label for="phone">Client Phone</label>
    <input type="text" name="phone"class="form-control" >

    <br>
    <button type="submit" class="btn btn-success" name="button">Add this client</button>
  </form>
  <a href="/StylistDetails/@Model.GetId()"><button type="button" class="btn btn-warning" name="button">Back</button></a>
</div>
